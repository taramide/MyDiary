<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/detail_page_bar"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entry Title : "
        android:textSize="20sp"
        android:textColor="#101010"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:id="@+id/txtT"
        android:layout_below="@id/detail_page_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtT"
        android:id="@+id/showHeader"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Header"
        android:paddingStart="10dp"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entry :"
        android:textStyle="bold"
        android:textColor="#101010"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtE"
        android:layout_below="@id/showHeader"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtE"
        android:id="@+id/showEntry"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="jndwiuasschbashdhshhsdhfuhfhusfhufhufhufshsufhfusuuuuuuuuuuushfhusuuuuuuuuuuuuuuuuhfhfhfhhfhfhfhfhfhhfhfhfhfhfhfh"
        android:paddingStart="10dp"
        android:textSize="25sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showEntry"
        android:id="@+id/txtCreated"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        android:textColor="#101010"
        android:textStyle="bold"
        android:text="Created : "
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCreated"
        android:id="@+id/showCreated"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text=""
        android:paddingStart="10dp"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_marginEnd="154dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showCreated"
        android:id="@+id/txtUpdated"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#101010"
        android:text="Last Updated : "
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUpdated"
        android:id="@+id/showUpdated"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:textSize="18sp"
        />

</RelativeLayout>